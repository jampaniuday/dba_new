CREATE TABLE ADDRESS_ROUTE
(
  ID                     NUMBER(30)             NOT NULL,
  SYSTEM                 NUMBER(30)             NOT NULL,
  SOURCEADDRESS_ID       NUMBER(30)             NOT NULL,
  DESTINATIONADDRESS_ID  NUMBER(30)             NOT NULL
);


CREATE UNIQUE INDEX ADDRESS_ROUTE_PK ON ADDRESS_ROUTE
(ID);


ALTER TABLE ADDRESS_ROUTE ADD (
  CONSTRAINT ADDRESS_ROUTE_PK
  PRIMARY KEY
  (ID)
  USING INDEX ADDRESS_ROUTE_PK
  ENABLE VALIDATE);
