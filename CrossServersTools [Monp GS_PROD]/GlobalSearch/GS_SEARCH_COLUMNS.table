CREATE TABLE GS_SEARCH_COLUMNS
(ID NUMBER(30) PRIMARY KEY,
 TABLE_ID NUMBER(30) NOT NULL,
 COLUMN_NAME VARCHAR(30) NOT NULL,
 CONVERTER VARCHAR(240), -- Not Active
 DATA_TYPE VARCHAR2(10) NOT NULL,
 CONSTRAINT FK_SRCH_COL_TABLE_ID
    FOREIGN KEY (TABLE_ID)
    REFERENCES GS_TABLES (ID),
 CONSTRAINT CHK_DATA_TYPE
    CHECK (DATA_TYPE IN ('VARCHAR2','NUMBER','DATE')));
 
CREATE UNIQUE INDEX GS_SRC_COL_TABLE_ID_IDX ON GS_SEARCH_COLUMNS(TABLE_ID,COLUMN_NAME);